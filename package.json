{
  "name": "capyba-back-challenge",
  "version": "1.0.0",
  "description": "Back challenge for Capyba Software",
  "main": "dist/server.js",
  "repository": "https://github.com/damattag/capyba-back-challenge.git",
  "author": "damattag <guilherme.damatta@yahoo.com.br>",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node --transpile-only ./prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "npx build && node build/server.js",
    "build": "tsup src --out-dir build",
    "prod": "npx migration:deploy && npx start",
    "migration": "cross-env DATABASE_HOST='localhost' yarn prisma migrate dev",
    "seed": "cross-env DATABASE_HOST='localhost' yarn prisma db seed",
    "migration:reset": "cross-env DATABASE_HOST='localhost' yarn prisma migrate reset --force",
    "migration:no-seed": "cross-env DATABASE_HOST='localhost' yarn prisma migrate dev --skip-seed",
    "migration:deploy": "prisma migrate deploy",
    "studio": "cross-env DATABASE_HOST='localhost' yarn prisma studio",
    "generate": "yarn prisma generate"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "18",
    "@types/nodemailer": "^6.4.14",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "zod": "^3.22.4"
  }
}