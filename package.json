{
  "name": "capyba-back-challenge",
  "version": "1.0.0",
  "description": "Back challenge for Capyba Software",
  "main": "dist/server.js",
  "repository": "https://github.com/damattag/capyba-back-challenge.git",
  "author": "damattag <guilherme.damatta@yahoo.com.br>",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node build/server.js",
    "build": "tsup src --out-dir build",
    "migration": "cross-env DATABASE_HOST='localhost' yarn prisma migrate dev",
    "migration:reset": "cross-env DATABASE_HOST='localhost' yarn prisma migrate reset --force",
    "studio": "cross-env DATABASE_HOST='localhost' yarn prisma studio",
    "generate": "yarn prisma generate"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  }
}
